<Window x:Class="TimerApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimerApplication"
        xmlns:viewModel="clr-namespace:TimerApplication.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="173.162" Width="447.246">
    <!--<Window.DataContext>
        <viewModel:TimerViewModel></viewModel:TimerViewModel>
    </Window.DataContext>-->
    <Grid>
        <TextBlock 
            HorizontalAlignment="Center" 
            TextWrapping="Wrap" 
            Text="{Binding CurrentCount}" 
            VerticalAlignment="Bottom" 
            FontSize="40"/>
        <TextBox 
            HorizontalAlignment="Left" 
            Height="23" Margin="65,34,0,0" 
            Text="{Binding UserCount}" 
            VerticalAlignment="Top" 
            Width="120"/>
        <Button 
            Content="Start" 
            HorizontalAlignment="Left" 
            Margin="254,34,0,0" 
            VerticalAlignment="Top" 
            Width="75"
            Command="{Binding StartTimer}"/>
    </Grid>
</Window>
